{
  "manifest_version": 3,
  "name": "Envairo",
  "version": "1.0.0",
  "description": "Testing Chrome Built-in AI Prompt API",
  "trial_tokens": [
    "Aq+SgkC5xaesUIiSEwEbk4uG2xGcrj2fbfAXRjA22ASx3Dl3dSdiFstkqE7S/oADC+aZvMIZIRhZCW1YcoN/5gIAAAB7eyJvcmlnaW4iOiJjaHJvbWUtZXh0ZW5zaW9uOi8vaGlsam9rYXBubGpwbGtwaG5mb2tvZWdiamhham5rYmMiLCJmZWF0dXJlIjoiQUlQcm9tcHRBUElNdWx0aW1vZGFsSW5wdXQiLCJleHBpcnkiOjE3NzQzMTA0MDB9"
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Envairo Settings"
  },
  "background": {
    "service_worker": "src/bg.js"
  },
  "commands": {
    "toggle-glass": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle Sustainability Advisor"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/overlay.js"],
      "css": ["src/overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/overlay.css",
        "src/config/**/*.json",
        "src/core/*.js",
        "src/utils/*.js",
        "src/data/*.csv"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}


